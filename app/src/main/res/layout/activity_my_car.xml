<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#44BBBB"
    tools:context=".activity.MyCarActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4474BB"
        android:minHeight="?attr/actionBarSize" />

    <Button
        android:id="@+id/btn_add_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DDDD22"
        android:textColor="#0F0F02"
        android:layout_marginTop="5dp"
        android:text="添加车辆" />
    <Button
        android:id="@+id/btn_delete_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DDDD22"
        android:textColor="#0F0F02"
        android:layout_marginTop="5dp"
        android:text="删除车辆" />

    <Button
        android:id="@+id/btn_find_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DDDD22"
        android:textColor="#0F0F02"
        android:layout_marginTop="5dp"
        android:text="查看车辆" />
    <ListView
        android:id="@+id/lv_mycar"
        android:layout_width="wrap_content"
        android:textColor="#0F0F02"
        android:layout_height="match_parent"/>

<!--    <TextView-->
<!--        android:id="@+id/tv_findcar"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:background="#667B99"/>-->

</LinearLayout>